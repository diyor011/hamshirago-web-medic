# Database (PostgreSQL)
DB_HOST=localhost
DB_PORT=5432
DB_USERNAME=postgres
DB_PASSWORD=postgres
DB_NAME=hamshira_go

# JWT
JWT_SECRET=your-super-secret-key-change-in-production
JWT_EXPIRES_IN=7d

# App
PORT=3000
NODE_ENV=development

# Admin secret — used in X-Admin-Secret header for operator endpoints
# Generate a strong random value: openssl rand -hex 32
ADMIN_SECRET=change-this-to-a-secure-random-value

# Cloudinary — for medic document photo uploads
# Get these from cloudinary.com → Settings → API Keys
CLOUDINARY_CLOUD_NAME=your-cloud-name
CLOUDINARY_API_KEY=your-api-key
CLOUDINARY_API_SECRET=your-api-secret

# Telegram Bot — for medic notifications when app is closed
# Get token from @BotFather on Telegram
TELEGRAM_BOT_TOKEN=your-telegram-bot-token

# Web Push (VAPID) — generate your own keys:
#   node -e "const wp=require('web-push'); const k=wp.generateVAPIDKeys(); console.log(k);"
# VAPID_SUBJECT must be "mailto:..." or your site URL
VAPID_PUBLIC_KEY=your-vapid-public-key
VAPID_PRIVATE_KEY=your-vapid-private-key
VAPID_SUBJECT=mailto:admin@hamshirago.uz
